        android:background="#F6F5F5"
        android:backgroundTint="#E91E63"
        android:text="119"
        android:textColor="#F4F0F0"
        app:rippleColor="#D88B8B"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
